{
  "info": {
    "name": "校园动态系统 API",
    "description": "校园动态系统稳定版本接口文档",
    "version": "1.0.0"
  },
  "item": [
    {
      "name": "系统接口",
      "item": [
        {
          "name": "健康检查",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          },
          "response": [
            {
              "name": "成功响应",
              "originalRequest": {
                "method": "GET",
                "url": {
                  "raw": "{{baseUrl}}/health",
                  "host": ["{{baseUrl}}"],
                  "path": ["health"]
                }
              },
              "status": "OK",
              "code": 200,
              "body": "{\n  \"code\": 0,\n  \"message\": \"success\",\n  \"data\": {\n    \"status\": \"ok\",\n    \"service\": \"Campus Moments Go API\",\n    \"database\": \"connected\"\n  }\n}"
            }
          ]
        },
        {
          "name": "根路径",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/",
              "host": ["{{baseUrl}}"],
              "path": [""]
            }
          }
        }
      ]
    },
    {
      "name": "用户认证",
      "item": [
        {
          "name": "用户注册",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"phone\": \"13800138000\",\n  \"password\": \"Test123456\"\n}"
            }
          }
        },
        {
          "name": "用户登录",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"account\": \"testuser\",\n  \"password\": \"Test123456\"\n}"
            }
          }
        },
        {
          "name": "退出登录",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/api/auth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "logout"]
            },
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        }
      ]
    },
    {
      "name": "用户资料",
      "item": [
        {
          "name": "获取用户资料",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/users/profile",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "profile"]
            },
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        },
        {
          "name": "更新用户资料",
          "request": {
            "method": "PUT",
            "url": {
              "raw": "{{baseUrl}}/api/users/profile",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "profile"]
            },
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"newusername\",\n  \"phone\": \"13900139000\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "文件上传",
      "item": [
        {
          "name": "上传文件",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/api/upload/file",
              "host": ["{{baseUrl}}"],
              "path": ["api", "upload", "file"]
            },
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file"
                }
              ]
            }
          }
        },
        {
          "name": "上传头像",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/api/upload/avatar",
              "host": ["{{baseUrl}}"],
              "path": ["api", "upload", "avatar"]
            },
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "avatar",
                  "type": "file"
                }
              ]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://106.52.165.122:8080"
    },
    {
      "key": "token",
      "value": ""
    }
  ]
}